<!DOCTYPE html>
<html lang="en">

    <!-- Head -->
    <%- include("../partials/head") %>

    <body>
        <div id="global-loader" >
            <div class="whirly-loader"> </div>
        </div>
        <!-- Main Wrapper -->
        <div class="main-wrapper">

            <!-- Header -->
            <%- include("../partials/header") %>

            <div class="page-wrapper">
                <div class="content">
                    <div class="page-header">
						<div class="row">
							<div class="col">
								<h3 class="page-title">Customers</h3>
							</div>
						</div>
					</div>
                    <div class="row">
						<div class="col-lg-2 col-md-12">
							<ul class="inbox-menu">
								<li class="active">
									<a href="/s/devices"><i class="fas fa-print"></i>Devices</a>
								</li>
								<li>
									<a href="/s/users"><i class="fas fa-users"></i>Users</a>
								</li>
								<li>
									<a href="/s/customers"><i class="fas fa-users"></i>Customers</a>
								</li>
								<li>
									<a href="/s/office"><i class="fas fa-home"></i>Office</a>
								</li>
							</ul>
						</div>
						
						<div class="col-lg-10 col-md-12">
							<div class="card bg-white">
								<div class="card-body">
                                    <!--  -->
                                    <div class="table-top">
                                        <div class="search-set"></div>
                                        <div class="wordset">
                                            <ul>
                                                <li>
                                                    <button data-bs-toggle="modal" data-bs-target="#modalAddCustomer"
                                                        class="btn btn-sm bg-success text-white">&plus; Add Customer
                                                    </button>
                                                </li>
                                            </ul>
                                        </div>
                                    </div><br>
									<div class="email-content">
										<div class="table-responsive">
											<table class="table table-inbox table-hover customers">
                                                <thead>
                                                    <th>Phone Number</th>
                                                    <th>Trade Name</th>
                                                    <th>Company Name</th>
                                                    <th>Action</th>
                                                </thead>
												<tbody>
                                                    <% 
                                                        let customers = data["customers"];
                                                        for(let i in customers){
                                                    %>
                                                        <tr class="unread clickable-row">
                                                            <td><%= customers[i]['phoneNumber'] %></td>
                                                            <td><%= customers[i]['tradeName'] %></td>
                                                            <td><%= customers[i]['companyName'] %></td>
                                                            <td></td>
                                                        </tr>
                                                    <% } %>
												</tbody>
											</table>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
                </div>
            </div>
        </div>
        <!-- /Main Wrapper -->

        <!-- Modal add device -->
        <div class="modal fade" id="modalAddCustomer" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Add Customer</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <!--  -->
                        <form action="/s/add-customer" method="post">
                            <div class="row">

                                <!--  -->
                                <div class="form-group">
                                    <label>Phone Number <span class="text-danger">&nbsp;*</span></label>
                                    <input type="text" name="phoneNumber" placeholder="Phone number.." required>
                                </div>
                                
                                <!--  -->
                                <div class="form-group">
                                    <label>Trade Name <span class="text-danger">&nbsp;*</span></label>
                                    <input type="text" name="tradeName" placeholder="Trade name.." required>
                                </div>
                                
                                <!--  -->
                                <div class="form-group">
                                    <label>Company Name <span class="text-danger">&nbsp;*</span></label>
                                    <input type="text" name="companyName" placeholder="Company name.." required>
                                </div>
                            
                                <!--  -->
                                <div class="form-group">
                                    <label>Regional Office <span class="text-danger">&nbsp;*</span></label>
                                    <div class="row mb-3">
                                        <div class="col-lg-11 col-sm-11 col-11">
                                            <select class="select form-control" name="officeId" required>
                                                <option value="" disabled selected>*** Choose Office ***</option>
                                                <% 
                                                    let offices = data["offices"];
                                                    for(let i in offices) {
                                                %>
                                                    <option class="text-uppercase" value="<%= offices[i]['id'] %>"><%= offices[i]['name'] %></option>            
                                                <% } %>
                                            </select>
                                        </div>
                                        <div class="col-lg-1 col-sm-1 col-1 ps-0">
                                            <a class="add-icon" data-bs-toggle="modal" data-bs-target="#modalAddOffice">
                                                <span><img src="/assets/img/plus1.svg" alt="img"></span>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                <!--  -->
                                <div class="form-group">
                                    <button type="submit" class="btn btn-submit form-control">Submit</button>
                                </div>
                                
                                <input name="customerId" id="customerId" style="display: none">
                            </div>
                        </form>
                        <!--  -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal add device -->
        <div class="modal fade" id="modalAddOffice" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Add Office</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <!--  -->
                        <form action="/s/add-office" method="post">
                            <div class="row">
                                <!--  -->
                                <div class="form-group">
                                    <label>Head (Full Name) <span class="text-danger">&nbsp;*</span></label>
                                    <input type="text" name="head" placeholder="Full name.." required>
                                </div>
                                <!--  -->
                                <div class="form-group">
                                    <label>Head (Phone Number) <span class="text-danger">&nbsp;*</span></label>
                                    <input type="text" name="phoneNumber" placeholder="Phone number.." required>
                                </div>
                                <!--  -->
                                <div class="form-group">
                                    <label>Location (City) <span class="text-danger">&nbsp;*</span></label>
                                    <select class="form-control" name="cityId" required>
                                        <option value="" disabled selected>*** Choose City ***</option>
                                        <% 
                                            let cities = data["cities"];
                                            for(let i in cities) {
                                        %>
                                            <option class="text-uppercase" value="<%= cities[i]['id'] %>"><%= cities[i]['city'] %></option>            
                                        <% } %>
                                    </select>    
                                </div>
                                <!--  -->
                                <div class="form-group">
                                    <label>Location (Address)<span class="text-danger">&nbsp;*</span></label>
                                    <input type="text" name="locationAddress" placeholder="Kimara, Dar es salaam.." required>
                                </div>
                                <!--  -->
                                <div class="form-group">
                                    <button type="submit" class="btn btn-submit form-control">Submit</button>
                                </div>
                                <!--  -->
                                <input name="customerId" id="customerId" style="display: none">
                            </div>
                        </form>
                        <!--  -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Script -->
        <%- include("../partials/script") %>

        <!-- Script -->
        <%- include("../partials/flash") %>
        
        <!-- Script -->
        <%- include("../partials/footer") %>
        
        <script>
            $('.customers').DataTable({
                "bFilter": true,
                "sDom": 'fBtlpi',  
                'pagingType': 'numbers', 
                // "ordering": true,
                // "order": [[6, 'desc']],
                "language": {
                    search: ' ',
                    sLengthMenu: '_MENU_',
                    searchPlaceholder: "Search...",
                    info: "_START_ - _END_ of _TOTAL_ items",
                },
                initComplete: (settings, json)=>{
                    $('.dataTables_filter').appendTo('#tableSearch');
                    $('.dataTables_filter').appendTo('.search-input');
                },	
            });
        </script>

    </body>
</html>
